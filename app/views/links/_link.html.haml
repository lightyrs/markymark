= content_tag_for :li, link, class: 'media' do
  - if link.image_url
    = link_to image_tag(link.image_url, class: 'media-object img-rounded img-responsive img-64x64', alt: link.title), link.url, class: 'pull-left'
  - else
    .pull-left
      .img-placeholder.img-64x64
  .media-body
    %p.domain= link.domain
    %h6.media-heading= link_to link.title.try(:html_safe), link.url, target: '_blank'
    %p.description= link.description
    - if link.embedly_json.present?
      .embed= embed(link)
    - if link.keywords.any?
      .tags
        - link.keywords.each do |keyword|
          %span.label.label-default= keyword
    -# %p.posted-at= link.posted_at.to_formatted_s
